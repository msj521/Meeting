<script>
    $(function() {
        var userinfo = <?php echo json_encode($userinfo);?>;
        var url = '/api/convention/training_sigin';
        var openid = userinfo.openid;
        var getData = {
            open_id: openid
        }
        ajax_all_Filed("true", "true", "POST", url, "json", getData, get_func);

        function get_func(data) {
            if (data.code == 412) {
                alert(data.msg);
                $('.name').val(data.data.username);
                $('.number').val(data.data.serial_number);
                $('.phone').val(data.data.tel);
                $('.register').val(data.data.ticket_id);
            } else {
                //alert(data.msg);
            }
        }

        $('.sign').click(function() {
            if ($('.name').val() == '') {
                alert('报名姓名不能为空！');
                return;
            } else if ($('.number').val() == '') {
                alert('注册编号不能为空！');
                return;
            } else if ($('.phone').val().length != 11) {
                alert('手机号码格式不正确！');
                return;
            } else if ($('.register').val() == '') {
                alert('注册类别不能为空！')
                return;
                return;
            } else {
                var data = {
                    username: $('.name').val(),
                    serial_number: $('.number').val(),
                    tel: $('.phone').val(),
                    ticket_id: $('.register').val(),
                    type: 1,
                    open_id: openid
                }
                ajax_all_Filed("true", "true", "POST", url, "json", data, sign_func);
            }
        })

        function sign_func(data) {
            alert(data.msg);
            $('.sign').hide();
        }

    })
</script>

