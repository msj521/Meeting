    public function getAllHeaders(){
        $headers = array();
        foreach($_SERVER as $key=>$value){
            var_dump($key);
            if(substr($key, 0, 10)==='HTTP_SIFIC'){
                $key = substr($key, 10);
                $key = str_replace('_', ' ', $key);
                $key = str_replace(' ', '-', $key);
                $key = strtolower($key);
                $headers[$key] = $value;
            }
        }
        exit;
        return $headers;
    }

