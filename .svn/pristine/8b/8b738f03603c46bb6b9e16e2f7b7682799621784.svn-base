            <span class="layui-breadcrumb">
              <a><cite>考试管理</cite></a>
              <a><cite>{$title|default='答题记录'}</cite></a>
            </span>
  <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right"  href="javascript:location.replace(location.href);" title="刷新"><i class="layui-icon" style="line-height:30px">ဂ</i></a>
</div>


<div class="x-body">
  <!-- 右侧内容框架，更改从这里开始 -->
  <form class="layui-form xbs" action="{$index|default='/'}">
    <div class="layui-form-pane" style="text-align: center;">
      <div class="layui-form-item" style="display: inline-block;">
        <div class="layui-input-inline">
          <input type="text" name="string" placeholder="考试题目" autocomplete="off" class="layui-input" value="{$string}">
          <input type="hidden" name="uid" value="{$uid|default=''}">
          <input type="hidden" name="exam_id" value="{$exam_id|default=''}">
          <input type="hidden" name="fid" value="{$fid|default=''}">
