                for (var i = 0; i < tablist.length; i++) {
                    str = str12(str, tablist[i], 1);
                    str2 = str12(str2, tablist[i], 2);
                }

                $("#table01 tbody").append(str);
                $("#table02 tbody").append(str2);
            }

        }
