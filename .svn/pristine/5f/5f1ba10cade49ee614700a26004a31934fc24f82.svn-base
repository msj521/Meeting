    function mtdownload(data) {
        if (data.code == 200) {
            var str = ''
            var pdfList = data.data;
            for (var i = 0; i < pdfList.length; i++) {
                if (pdfList[i].download_title.indexOf('05/30') != -1) {
                    str = '.date0530';
                } else if (pdfList[i].download_title.indexOf('05/31') != -1) {
                    str = '.date0531';
                } else {
                    str = '.date0601'
                }
                $('<li><a href="' + pdfList[i].file_path + '" target="view_window">' + pdfList[i].file_name.split('.')[0] + '</a></li>').appendTo(str);
            }
        } else {
            showLaert(data.msg);
        }
    }
    var data = {
        "convention_id": convention_id,
        "module": module
    };
    ajax_all_Filed("true", "true", "POST", download, "json", data, mtdownload); //调用函数

    function createPdf(pdfurls) {
        new PDFObject({
            url: pdfurls,
            pdfOpenParams: {
                view: 'Fit',
                scrollbars: '0',
                toolbar: '0',
                statusbar: '0',
                navpanes: '0'
            }
        }).embed('pdf2');
    };
