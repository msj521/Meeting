<script>
  var dataList = <?php echo json_encode($list);?>;
  //console.log(dataList);
  for (var i = 0; i < dataList.data.length; i++) {
    if(dataList.data[i].record_status==1){
        dataList.data[i].record_status='启用';
    }else if(dataList.data[i].record_status==2){
        dataList.data[i].record_status='禁用';
    }else if(dataList.data[i].record_status==-1){
        dataList.data[i].record_status='标记删除';
    }else if(dataList.data[i].record_status==-2){
        dataList.data[i].record_status='彻底删除';
    } 
  }

  layui.use(['table','layer'],function(){
    var layer = layui.layer;
    var table = layui.table;
    table.render({
      elem: '#table'
      ,data: dataList.data
      ,cols: [[
        {field:'fid',width:80,title: 'ID',sort:true}
        ,{field:'convention_name',  width:160, title: '名称'}
        ,{width:90,  title: '重要时间', toolbar: '#a'}
        ,{width:90,  title: '重要日期', toolbar: '#b'}
        ,{width:80,  title: '秘书处', toolbar: '#c'}
        ,{width:90,  title: '交通信息', toolbar: '#d'}
        ,{width:80,  title: '会议室', toolbar: '#e'}
        ,{width:80,  title: '日程', toolbar: '#f'}
        ,{width:80,  title: '新闻', toolbar: '#p'}
        ,{width:80,  title: '直播', toolbar: '#h'}
        ,{width:80,  title: '照片墙', toolbar: '#i'}
        ,{width:80,  title: '播客', toolbar: '#j'}
        ,{width:80,  title: '企业', toolbar: '#k'}
        ,{width:90,  title: '系统消息', toolbar: '#l'}
        ,{width:90,  title: '荣誉/剪影', toolbar: '#zx'}
        ,{field:'start_time', width:160,  title: '开始时间'}
        ,{field:'end_time',  width:160, title: '结束时间'}        
        ,{field:'record_status',width:100,   title: '状态'}
        ,{fixed: 'right',title: '操作', width:90, align:'center', toolbar: '#barTool'}
      ]]
      ,page: false
      ,limit: dataList.data.length
    });
 
    //监听工具条
    table.on('tool(tableTool)', function(obj){
      var data = obj.data;
      if(obj.event === 'del'){
        member_del(data.fid,'{$del|default="/"}','{$index|default="/"}')
      } else if(obj.event === 'edit'){
        member_edit('大会编辑','{$edit|default="/"}','{$index|default="/"}',data.fid,0,0)
      } else if(obj.event === 'A'){
        member_edit('重要时间','/meet/switch','{$index|default="/"}',data.fid+'&A',0,0)
      } else if(obj.event === 'B'){
        member_edit('重要日期','/meet/switch','{$index|default="/"}',data.fid+'&B',0,0)
      } else if(obj.event === 'C'){
        member_edit('秘书处','/meet/switch','{$index|default="/"}',data.fid+'&C',0,0)
      } else if(obj.event === 'D'){
        member_edit('交通信息','/meet/switch','{$index|default="/"}',data.fid+'&D',0,0)
      } else if(obj.event === 'E'){
        member_edit('会议室','/meet/room','{$index|default="/"}',data.fid+'&E=0',0,0)
      } else if(obj.event === 'F'){
        member_edit('日程','/meet/agenda','{$index|default="/"}',data.fid+'&F=0',0,0)
      } else if(obj.event === 'H'){
        member_edit('会议直播','/meet/live','{$index|default="/"}',data.fid+'&H=0',0,0)
      } else if(obj.event === 'I'){
        member_edit('照片墙','/meet/photo','{$index|default="/"}',data.fid+'&I=0',0,0)
      } else if(obj.event === 'J'){
        member_edit('播客','/meet/podcast','{$index|default="/"}',data.fid+'&J=0',0,0)
      } else if(obj.event === 'P'){
        member_edit('新闻动态','/meet/news','{$index|default="/"}',data.fid+'&P=0',0,0)
      } else if(obj.event === 'K'){
        member_edit('企业','/meet/exh','{$index|default="/"}',data.fid+'&K=0',0,0)
      } else if(obj.event === 'L'){
        member_edit('系统消息','/meet/notice','{$index|default="/"}',data.fid+'&L=0',0,0)
      } else if(obj.event === 'ZX'){
        member_edit('荣誉与剪影','/meet/honor','{$index|default="/"}',data.fid+'&ZX=0',0,0)
      } else if(obj.event === 'ZB'){
        member_edit('展区布置图','/meet/multi','{$index|default="/"}',data.fid+'&ZB=0',0,0)
      }
    });

  })

</script>
