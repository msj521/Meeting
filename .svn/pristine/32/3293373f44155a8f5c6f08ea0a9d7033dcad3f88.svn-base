* {
    margin: 0;
    padding: 0;
}

html {
    font-size: 26.6667vw;
}

body {
    line-height: .24rem;
}

.conter1000 {
    margin: 0 !important;
    padding: 0;
    width: 100% !important;
}

.context {
    position: relative;
}

#live_list {
    width: 100% !important;
    height: 2rem !important;
    font-size: .17rem !important;
    line-height: 2rem !important;
}

.liveinfo_titlerg {
    float: left;
    background: url(../images/icon_audience.png) no-repeat;
    background-position: .01rem .04rem;
    background-size: .15rem, .12rem;
    padding-left: .18rem;
    font-size: .16rem;
    color: #333;
    padding-right: .10rem;
    position: absolute;
    left: .1rem;
    bottom: -.3rem;
}

.liveinfo_ct {
    padding: 0 !important;
    margin: .4rem .2rem 0 !important;
    display: flex;
    justify-content: space-around;
    position: relative;
    border-bottom: .01rem solid #ccc;
    height: .4rem;
}

.liveinfo_tab .title_txt2_content {
    display: none;
    position: absolute;
    left: 0;
    top: .5rem;
}

.liveinfo_tab_active .title_txt2_content {
    display: block;
}

.liveinfo_tab .title_txt2::after {
    display: none;
}

.liveinfo_tab_active .title_txt2::after {
    display: block;
}

.title_txt2 {
    font-size: .18rem;
}

.title_txt2::after {
    content: "";
    display: block;
    height: .02rem;
    background: rgba(35, 35, 35, 1);
    margin-top: 0.15rem;
}

.liveinfo_tab_active .title_txt2 {
    font-weight: bold;
    color: #FF9F00;
}

.dm-list-cont {
    max-height: 4rem;
    overflow: scroll;
    padding-bottom: .6rem;
}

.heihei {
    display: none;
}

.mbxue,
.footers,
.liveinfo_title {
    display: none;
}

.liveinfo_head,
.chet_tab {
    display: block !important;
}

.mt_live_module {
    width: 100%;
}

.liveinfo_titlerg {
    font-size: .16rem;
}

.dm-y-list {
    width: 100%;
    padding-right: .2rem;
    position: absolute;
    left: .2rem;
    bottom: -5rem;
    display: none;
}

#send_input {
    width: 2.5rem;
    height: .3rem;
    outline: none;
    border-radius: .1rem;
    border: 0;
}

.sendBtn {
    width: .44rem;
    height: .32rem;
    border: 0;
    border-radius: .1rem;
    margin: auto 0;
}

#send-dm {
    position: fixed;
    left: .2rem;
    bottom: 0;
    border: .01rem solid #ccc;
    width: 3rem;
    border-radius: .1rem;
    height: .34rem;
}


/* 公共遮罩 */

.pulic_t_div {
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    width: 100%;
    height: 100%;
}

.product_list {
    width: 5rem;
    margin: 10% auto;
}

.pulic_t_txt {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
    padding-bottom: .3rem;
    background: #fff;
    border-radius: .04rem;
    width: 2rem;
    height: 1.5rem;
    -webkit-box-shadow: 0rem .02rem .3rem 0 rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0rem .2rem .3rem 0rem rgba(0, 0, 0, 0.5);
    box-shadow: 0rem .2rem .3rem 0rem rgba(0, 0, 0, 0.5);
}

#alert_btn {
    border-radius: .1rem;
    border: 0;
    width: .6rem;
    background: #6FBBED;
    color: #fff;
}

.subject_title {
    padding-left: .1rem;
}

.subject_txt {
    padding: .1rem 0 .1rem .2rem;
}