.flexslider{position:relative;height:400px;overflow:hidden; margin-bottom: 10px;}

.slides{position:relative;z-index:1;}

.slides li{height:400px;}
.slides li a{display: block; width: 100%; height: 400px; line-height: 400px;}
.flex-control-nav{position:absolute;bottom:10px;z-index:2;width:100%;text-align:center;}

.flex-control-nav li{display:inline-block;width:20px;height:5px;margin:0 6px;*display:inline;zoom:1; }

.flex-control-nav a{display:inline-block;width:20px;height:5px;overflow:hidden;background:#ddd;cursor:pointer; color: #ddd; border-radius: 4px;}

.flex-control-nav .flex-active{background:#232323; color: #232323;}
.flex-direction-nav{position:absolute;z-index:3;width:100%;top:45%;}

.flex-direction-nav li a{display:block;width:50px;height:50px;overflow:hidden;cursor:pointer;position:absolute;}

