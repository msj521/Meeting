<script>
    $(function() {
        var userinfo = <?php echo json_encode($userinfo);?>;
        var url = '/api/convention/gather_invoice';
        var bill_type = 1;
        var openid = userinfo.openid;
        var data = {
            open_id: openid
        };
        ajax_all_Filed("true", "true", "POST", url, "json", data, searchData);

        function searchData(data) {
            if (data.code == 412) {
                //已申请
                alert(data.msg);
                if (data.data) {
                    $('.username').val(data.data.username);
                    $('.serial_number').val(data.data.serial_number);
                    $('.bill_title').val(data.data.bill_title);
                    $('.tax_num').val(data.data.tax_num);
                    $('.account_bank').val(data.data.account_bank);
                    $('.account').val(data.data.account);
                    $('.address').val(data.data.address);
                    $('.unit_tel').val(data.data.unit_tel);
                    $('.unit_address').val(data.data.unit_address);
                    $('.ticket' + data.data.bill_type).addClass('isActive').siblings().removeClass('isActive');
                    bill_type = data.data.bill_type - 0;
                    if (bill_type == 2) {
                        $('.toggle').each(function() {
                            $(this).addClass('require');
                        })
                    }
                }
            } else {
                //success
                // alert(data.msg);
            }
        }

        $('.submit').click(function() {
            if ($('.username').val() == '') {
                alert('姓名不能为空！');
                return;
            } else if ($('.serial_number').val() == '') {
                alert('注册编号不能为空！');
                return;
            } else if ($('.bill_title').val() == '') {
                alert('发票抬头不能为空！');
                return;
            } else if ($('.tax_num').val() == '') {
                alert('税号不能为空！');
                return;
            } else if ($('.address').val() == '') {
                alert('邮寄地址不能为空！');
                return;
            } else if (bill_type == 2) {
                if ($('.account_bank').val() == '') {
                    alert('开户行不能为空！');
                    return;
                } else if ($('.account').val() == '') {
                    alert('开户行账号不能为空！');
                    return;
                } else if ($('.unit_tel').val() == '') {
                    alert('电话不能为空！');
                    return;
                } else if ($('.unit_address').val() == '') {
                    alert('单位地址不能为空！');
                    return;
                }
            }
            var data = {
                username: $('.username').val(),
                serial_number: $('.serial_number').val(),
                bill_title: $('.bill_title').val(),
                tax_num: $('.tax_num').val(),
                address: $('.address').val(),
                account_bank: $('.account_bank').val(),
                account: $('.account').val(),
                unit_tel: $('.unit_tel').val(),
                unit_address: $('.unit_address').val(),
                bill_type: bill_type,
                open_id: openid,
                type: 1
            }
            ajax_all_Filed("true", "true", "POST", url, "json", data, submit_func);
        })

        function submit_func(data) {
            alert(data.msg);
            $('.submit').hide();
        }

        $('.ticket_box').on('click', 'button', function() {
            bill_type = $(this).attr('name') - 0;
            $(this).addClass('isActive').siblings().removeClass('isActive');
            if (bill_type == 1) {
                $('.toggle').each(function(i) {
                    $(this).removeClass('require');
                })
            } else if (bill_type == 2) {
                $('.toggle').each(function(i) {
                    $(this).addClass('require');
                })
            }
        })

    })
</script>

